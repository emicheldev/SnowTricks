<form method="post" action="{{ path('admin.video.delete', {'id': video.id}) }}" onsubmit="return confirm('Vous êtes sur le point de supprimer une vidéo, êtes-vous vraiment sûr ?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ video.id) }}">
	<button class="btn btn-danger">Supprimer</button>
</form>