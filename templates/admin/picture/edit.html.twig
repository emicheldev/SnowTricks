{% extends 'base.html.twig' %}

{% block title 'GÃ©rer les photos' %}
{% block h1 'Photo' %}
{% block subtitle 'Snow Tricks' %}

{% block body %}
	<div class="row container">
		<div class="col-md-8 col-xs-12">
			<h1>Modifier une photo</h1>
			    {{ include('admin/partials/picture/_form_edit.html.twig', {'button_label': 'Modifier', 'link_figure': path('admin.figure.delete', {id: figure.id})}) }}
		</div>
		<div class="col-md-4 col-xs-12">
			{% if 'image-' in picture.filename %}
				{% set url = asset('build/images/' ~ picture.filename) %}
			{% else %}
				{% set url = vich_uploader_asset(picture, 'imageFile') | imagine_filter('thumb') %}
			{% endif %}
			<img class="img-thumbnail" src="{{ url }}" alt="">
		</div>
	</div>

{% endblock %}