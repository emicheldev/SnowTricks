{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Editer un trick{% endblock %}


{% block body %}
    <div class="col-lg-7 col-md-10 mx-auto">
        <h1>Modifier le trick : {{ trick.name }}</h1>
        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.category) }}

        <div class="form-group">
            {{ form_label(form.mainImage) }}
            <div class="row">
                <div class="col-sm-6">
                    {{ form_errors(form.mainImage.file) }}
                    {{ form_widget(form.mainImage.file) }}
                    {{ form_help(form.mainImage.file) }}
                </div>
                <div class="col-sm-6">
                    {{ form_errors(form.mainImage.caption) }}
                    {{ form_widget(form.mainImage.caption) }}
                    {{ form_help(form.mainImage.caption) }}
                </div>
            </div>
        </div>

        {{ form_row(form.images) }}
        {{ form_row(form.videos) }}

        <button type="submit" class="btn btn-success btn-lg col-12"><i class="fas fa-check"></i> Enregistrer les modifications !</button>

        {{ form_end(form) }}
    </div>
{% endblock %}