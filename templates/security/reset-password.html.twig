{% extends 'base.html.twig' %}

{% block title "Réinitialiser votre mot de passe" %}

{% block body %}
	<div class="container container-form mt-4 text-center">
		<h1>
			Réinitialiser votre mot de passe
		</h1>
		{% if error is defined %}
			<div class="alert alert-danger">
				{{ error.messageKey | trans(error.messagedata, 'security') }}
			</div>
		{% endif %}


		{{ form_start(form) }}
		<div class="row">
			<div class="col">
				{{ form_row(form.email) }}
			</div>
		</div>
		<div class="row">
			<div class="col">
				{{ form_row(form.password) }}
			</div>
		</div>
		<div class="actions">
			<button class="btn btn-primary">
				{{ button|default('Réinitialiser mon mot de passe') }}
			</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}